{% for v in m %}
    <!-- Item Player -->
    <div class="col-xl-3 col-lg-4 col-md-6 {{ v.idEquipe.nom }}">
        <div class="item-player">
            <div class="head-player">

                <img src="{{ asset('uploads/Joueurs/' ~ v.imagejoueur1) }}" alt="location-team">
                <div class="overlay"><a href="single-player.html">+</a></div>
            </div>
            <div class="info-player">
                                    <span class="number-player">
                                       {{ v.numero }}
                                    </span>
                <h4>
                    {{ v.prenom }}{{ v.nom }}
                    <span>Defender</span>
                </h4>
                <ul>
                    <li>
                        <strong>nationalite</strong> <span><img src="img/clubs-logos/colombia.png" alt=""> {{ v.nationalite }}</span
                    </li>
                    <li><strong>Selections</strong> <span>{{ v.selections }}</span></li>
                    <li><strong>Date de naissance</strong> <span>{{ v.datedenaissance|date }}</span></li>
                </ul>
            </div>
            <a href="single-player.html" class="btn">View Player <i class="fa fa-angle-right" aria-hidden="true"></i></a>
            <input type="hidden" id="cout" value="{{ v.cout }}">
            <input type="Radio" name="gk" value="{{ v.idjoueur }}" id="li" onclick="handleClick(this);" required="true">
            <input type="button">

        </div>
    </div>

{% endfor %}