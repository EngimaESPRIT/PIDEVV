{% extends 'base.html.twig' %}
{% form_theme form '@MyAppUser/Form/bootstrap_3_horizontal_layout.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}
{% block content %}

            <!-- Section Title -->
            <div class="section-title" style="background:url( {{ asset('img/slide/1.jpg') }})">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <h1>Actualite</h1>
                        </div>

                        <div class="col-md-4">
                            <div class="breadcrumbs">
                                <ul>
                                    <li><a href="">Home</a></li>
                                    <li>Inner Page</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Section Title -->

            <!-- Section Area - Content Central -->
            <section class="content-info">

                <div class="container paddings-mini">
                   <div class="row">

                        <!-- Sidebars -->
                        <aside class="col-lg-3">

                            <div>
                                <h4>Searh Sidebar</h4>
                                <form class="search" action="#" method="Post">
                                    <div class="input-group">
                                        <input class="form-control" placeholder="Search..." name="email"  type="email" required="required">
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary" type="submit" name="subscribe" >Go!</button>
                                        </span>
                                    </div>
                                </form>
                            </div>

                            <!-- Widget Categories-->
                            <div class="panel-box">
                                <div class="titles no-margin">
                                    <h4>News</h4>
                                </div>
                                <div class="info-panel">
                                    <ul class="list">
                                        <li><i class="fa fa-check"></i><a href="#">BeIn sports</a></li>
                                        <li><i class="fa fa-check"></i><a href="#">Canal+ sports</a></li>
                                        <li><i class="fa fa-check"></i><a href="#">Videos</a></li>
                                        <li><i class="fa fa-check"></i><a href="#">russia news</a></li>
                                        <li><i class="fa fa-check"></i><a href="#">streaming current matchs</a></li>
                                    </ul>
                                </div>
                            </div>
                            <!-- End Widget Categories-->

                            <!-- Widget Text-->
                            <div class="panel-box">
                                <div class="titles no-margin">
                                    <h4> news</h4>
                                </div>
                                <div class="info-panel">
                                    <p>Our website will bring you the latest news from the best sources.</p>
                                </div>
                            </div>
                            <!-- End Widget Text-->

                            <!-- Widget img-->
                            <div class="panel-box">
                                <div class="titles no-margin">
                                    <h4>Media</h4>
                                </div>
                                <img src="{{ asset('img/slide/1.jpg') }}" alt="">
                                <div class="row">
                                   <div class="info-panel">
                                        <p>Be closer to Russia world cup by watching our best images and videos , interviews with players , coaches </p>
                                   </div>
                                </div>
                            </div>
                            <!-- End Widget img-->
                        </aside>
                        <!-- End Sidebars -->


                        <div class="col-lg-9">
                            <!-- Content Text-->
                            <div class="panel-box">
                                <div class="titles">
                                    <h4>Recent News</h4>
                                </div>

                                <!-- Post Item -->
                                {% for post in post2 %}
                                    <div class="post-item">
                                    <div class="row">

                                        <div class="col-md-4">
                                            <div class="img-hover">
                                               <img src={{ asset('uploads/images/')~ post.img1 ~''}} alt="" class="img-responsive">
                                               <div class="overlay"><a href="{{ path('details_post', {'idp': post.idPost,'id':post.idUser.id}) }}">+</a></div>
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <h5><a href="{{ path('details_post', {'idp': post.idPost,'id':post.idUser.id}) }}"> {{post.title}}  </a></h5>
                                            <span class="data-info">{% if post.date %}{{ post.date|date('Y-m-d H:i:s') }}{% endif %}</td> / <i class="fa fa-comments"></i><a href="#">0</a></span>
                                            <p> {{ post.description }}<a href="{{ path('details_post', {'idp':post.idPost , 'id':post.idUser.id}) }}">Read More [+]</a></p>
                                        </div>
                                   </div>

                                </div>
                                {% endfor %}
                                 <!-- End Post Item -->
                            </div>

<div class="input-group" >
                            <h1>Create a post</h1>
<div class="">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <input type="submit" value="Create" />
                            {{ form_end(form) }}

</div>

</div>


                            <!-- End Content Text-->
                        </div>
                   </div>
                </div>

                <!-- Newsletter -->
                <div class="section-newsletter">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="text-center">
                                    <h2>Enter your e-mail and <span class="text-resalt">subscribe</span> to our newsletter.</h2>
                                    <p>Duis non lorem porta,  eros sit amet, tempor sem. Donec nunc arcu, semper a tempus et, consequat.</p>
                                </div>
                                <form id="newsletterForm" action="http://html.iwthemes.com/sportscup/php/mailchip/newsletter-subscribe.php">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-envelope"></i>
                                                </span>
                                                <input class="form-control" placeholder="Your Name" name="name"  type="text" required="required">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-envelope"></i>
                                                </span>
                                                <input class="form-control" placeholder="Your  Email" name="email"  type="email" required="required">
                                                <span class="input-group-btn">
                                                    <button class="btn btn-primary" type="submit" name="subscribe" >SIGN UP</button>
                                                 </span>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <div id="result-newsletter"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Newsletter -->
            </section>
            <!-- End Section Area -  Content Central -->

            <div class="instagram-btn">
                <div class="btn-instagram">
                    <i class="fa fa-instagram"></i>
                    FOLLOW
                    <a href="https://www.instagram.com/fifaworldcup/" target="_blank">&#64;fifaworldcup</a>
                </div>
            </div>

            <div class="content-instagram">
                <div id="instafeed"></div>
            </div>

{% endblock %}

